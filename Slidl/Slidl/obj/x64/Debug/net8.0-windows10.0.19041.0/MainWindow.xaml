<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Slidl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid x:ConnectionId='2' x:Name="RootGrid" Width="460" Height="500" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
        
        
        <StackPanel    
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            AutomationProperties.Name="Potatoes?"
            BorderThickness="1"
            Spacing="8"
            Padding="40"
            CornerRadius="4">
            
            <!-- Headers are promoted to name -->
            <TextBox Header="Name" />

            <!-- As are placeholders -->
            <TextBox PlaceholderText="Nickname" />

            <!-- If both are provided, headers are name and placeholders are moved to description -->
            <TextBox Header="Email" PlaceholderText="test@example.com" />

        </StackPanel>
        
    </Grid>
    
    
</Window>

